<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/sp_layout"
        android:layout_width="180dp"
        android:layout_height="140dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="#afb4db"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#77ac98"
            android:gravity="center_horizontal"
            android:text="Sp content"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sp_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:scaleType="fitXY" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_init"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#585eaa"
        android:enabled="true"
        android:onClick="onButtonClick"
        android:text="Initialize data"
        app:layout_constraintTop_toBottomOf="@+id/sp_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/backupButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="16dp"
            android:backgroundTint="#426ab3"
            android:onClick="onButtonClick"
            android:text="Backup"/>

        <Button
            android:id="@+id/restoreButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="16dp"
            android:backgroundTint="#78a355"
            android:onClick="onButtonClick"
            android:text="Restore"/>

    </LinearLayout>

</LinearLayout>
